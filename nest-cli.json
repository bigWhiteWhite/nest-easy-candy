{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"type": "application",
	"entryFile": "main",
	"compilerOptions": {
		"webpack": true,
		"deleteOutDir": true,
		"tsConfigPath": "tsconfig.build.json",
		"watchAssets": true,
		"assets": [
			{
				"include": "../public",
				"outDir": "./dist/public"
			},
			{
				"include": "../views",
				"outDir": "./dist/views"
			}
		]
	}
}
