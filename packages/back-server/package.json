{
	"name": "back-server",
	"version": "0.0.1",
	"description": "back-server",
	"author": "zhongYi",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"start:dev": "cross-env NODE_ENV=dev nest start --debug --watch",
		"start:test": "cross-env NODE_ENV=test nest start --watch",
		"start:prod": "cross-env NODE_ENV=prod nest start --watch",
		"build": "nest build",
		"node:prod": "cross-env NODE_ENV=prod node dist/main",
		"pm2:dev": "pm2 start ecosystem.config.js --env dev",
		"pm2:test": "pm2 start ecosystem.config.js --env test",
		"pm2:prod": "pm2 start ecosystem.config.js --env prod",
		"lint": "eslint \"{src,config,libs,test}/**/*.ts\" --fix",
		"clean:dist": "rimraf dist",
		"clean:lib": "rimraf node_modules",
		"clean:log": "rimraf logs",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/axios": "^3.0.0",
		"@nestjs/common": "^8.0.0",
		"@nestjs/config": "^2.2.0",
		"@nestjs/core": "^8.0.0",
		"@nestjs/jwt": "8.0.1",
		"@nestjs/passport": "^9.0.0",
		"@nestjs/platform-express": "^8.0.0",
		"@nestjs/platform-socket.io": "^9.0.7",
		"@nestjs/swagger": "^5.2.1",
		"@nestjs/websockets": "^9.0.7",
		"@typegoose/typegoose": "6.0.0",
		"bcryptjs": "^2.4.3",
		"chalk": "^4.0.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"cookie-parser": "^1.4.6",
		"crypto-js": "^4.1.1",
		"ejs": "^3.1.8",
		"express": "^4.18.2",
		"express-session": "^1.17.3",
		"ioredis": "^5.3.2",
		"log4js": "^6.7.1",
		"mongoose": "5.13.14",
		"multer": "1.4.5-lts.1",
		"nanoid": "^3.3.4",
		"nestjs-typegoose": "^7.1.38",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.2.0",
		"socket.io": "^4.7.2",
		"stacktrace-js": "^2.0.2",
		"svg-captcha": "^1.4.0",
		"swagger-ui-express": "^4.4.0",
		"ua-parser-js": "^1.0.37"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.0.2",
		"@nestjs/cli": "^8.0.0",
		"@nestjs/schematics": "^8.0.0",
		"@nestjs/testing": "^8.0.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/chalk": "^2.2.0",
		"@types/cookie-parser": "^1.4.3",
		"@types/express": "^4.17.13",
		"@types/express-session": "^1.17.5",
		"@types/multer": "^1.4.7",
		"@types/node": "^16.0.0",
		"@types/passport": "^1.0.11",
		"@types/passport-jwt": "^3.0.6",
		"@types/passport-local": "^1.0.34",
		"@types/supertest": "^2.0.11",
		"@types/ua-parser-js": "^0.7.39",
		"cross-env": "^7.0.3",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "28.0.1",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "4.0.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": ".",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/libs/"
		],
		"moduleNameMapper": {
			"^@app/db(|/.*)$": "<rootDir>/libs/db/src/$1",
			"^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1"
		}
	},
	"engines": {
		"node": ">=16"
	}
}
